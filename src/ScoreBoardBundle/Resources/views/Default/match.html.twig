{% extends "ScoreBoardBundle::layout.html.twig" %}

{% block content %}
<h1 class="contact">Page match</h1>
<div class="Board">
	<div class="team1">
		<h2>Team1</h2>
		<p>image team1 ici</p><img src=""/>
	</div>
	<div class="timer">
		<span id ="countdown">20:00</span>
		<input type="button" value="Play/Pause" onclick="Example2.Timer.toggle();">
		<input type="button" value="Stop/Reset" onclick="Example2.resetCountdown();">
	</div>
	<div class="team2">
		<h2>Team2</h2>
		<p>image team2 ici</p><img src="" />
	</div>
</div>
<div class="Score">
	<h2>Score</h2>
	<div class="score1">
	</div>
	<div class="score2">
	</div>
	{% for match in matchs %}
		<p>{{ match.team1}}</p>
		<label id="score1">0</label>
		<p>{{ match.team2}}</p>
		<label id="score2">0</label>
	{% endfor %}
</div>
{% endblock %}