{% extends "ScoreBoardBundle::layout.html.twig" %}

{% set activePage = 'team' %}

{% block content %}
<div class="container theme-showcase" role="main">
	<div class="jumbotron">
		<div class="well">
			<h1>Team creation</h1>
			<p>Here you can create teams to participate to a match.</p>
		</div>
		<div class="panel panel-default">
			<div class="panel-heading">
				<h3 class="panel-title">Team creation form</h3>
			</div>
			<div class="panel-body">
				{{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
				<div class="form-group">
					{{ form_label(form.team, "Team name", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}
					{# Affichage des erreurs pour ce champ précis. #}
					{{ form_errors(form.team) }}

					<div class="col-sm-4">
					{# Génération de l'input. #}
					{{ form_widget(form.team, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="form-group">
					{{ form_label(form.logo, "Team logo", {'label_attr': {'class': 'col-sm-3 control-label'}}) }}

					{# Affichage des erreurs pour ce champ précis. #}
					{{ form_errors(form.logo) }}

					<div class="col-sm-4">
					{# Génération de l'input. #}
					{{ form_widget(form.logo, {'attr': {'class': 'form-control'}}) }}
					</div>
				</div>
				<div class="form-group">
					<div class="col-md-offset-3">
						<input class="btn btn-sm btn-primary" type="submit" name="Envoie" value="Créer" />
					</div>
				</div>
				{{ form_end(form) }}
		    	<li><a href="{{ path('creation_ScoreBoard') }}">Desire to create a game? Click here!</a></li>
			</div>
		</div>
	</div>
</div>

{% endblock %}